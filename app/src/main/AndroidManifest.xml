<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.banana.transformersbattle">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- REQUIRED BY GLIDE -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".framework.TBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransformersBattle">
        <activity
            android:name=".framework.ui.battle.BattleActivity"
            android:theme="@style/Theme.TransformersBattle.NoActionBar" />
        <activity android:name=".framework.ui.create_transformer.TransformersWorkshopActivity" />
        <activity android:name=".framework.ui.transformer_list.TransformerListActivity" />
        <activity android:name=".framework.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>